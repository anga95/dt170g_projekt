<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="DB">
        <jta-data-source>DB</jta-data-source>
        <class>se.miun.dt170g_projekt.entities.EmployeeSchedule</class>
        <class>se.miun.dt170g_projekt.entities.Shift</class>
        <class>se.miun.dt170g_projekt.entities.DailyLunchEntity</class>
        <class>se.miun.dt170g_projekt.entities.BookingEntity</class>
        <class>se.miun.dt170g_projekt.entities.EmployeeEntity</class>
        <class>se.miun.dt170g_projekt.entities.MenuItemsEntity</class>
        <properties>
            <!--            driver, url and connection credentials-->
            <property name="jakarta.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:derby://localhost:1527/DB"/>
            <property name="jakarta.persistence.jdbc.user" value="APP"/>
            <property name="jakarta.persistence.jdbc.password" value="APP"/>

        </properties>
    </persistence-unit>
</persistence>
