<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="dbPU">
      <jta-data-source>jdbc/__antonsRes</jta-data-source>
    <class>database.EmployeeEntity</class>
    <class>database.PersonalScheduleEntity</class>
    <class>database.RestaurantEntity</class>
    <class>database.ScheduleEntity</class>
    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:derby://localhost:1527/db;create=true"/>
