<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/table"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:text="@string/table_x" />

<!--    Starter-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/priostarter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prio_3" />

        <TextView
            android:id="@+id/starter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/f_rr_tt" />

        <CheckBox
            android:id="@+id/checkBoxstarter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/starter_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--    MainCourse-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/priomaincourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prio_1" />

        <TextView
            android:id="@+id/maincourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/varmr_tt" />

        <CheckBox
            android:id="@+id/checkBoxmaincourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/maincourse_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--    Dessert-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/priodessert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prio_2" />

        <TextView
            android:id="@+id/dessert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/efterr_tt" />

        <CheckBox
            android:id="@+id/checkBoxdessert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dessert_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
