<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/table_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table #"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxStarter" />

    <CheckBox
        android:id="@+id/checkBoxStarter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starter"
        app:layout_constraintStart_toEndOf="@+id/table_number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/table_number" />

    <CheckBox
        android:id="@+id/checkBoxMainCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Course"
        app:layout_constraintStart_toEndOf="@+id/checkBoxStarter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/table_number" />

    <CheckBox
        android:id="@+id/checkBoxDessert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dessert"
        app:layout_constraintStart_toEndOf="@+id/checkBoxMainCourse"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/table_number" />


</androidx.constraintlayout.widget.ConstraintLayout>